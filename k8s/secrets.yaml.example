apiVersion: v1
kind: Secret
metadata:
  name: social-media-scraper-secrets
  namespace: social-media-scraper
type: Opaque
stringData:
  SECRET_KEY: "your-secret-key-here-change-in-production"
  JWT_SECRET_KEY: "your-jwt-secret-key-here-change-in-production"
  DATABASE_URL: "postgresql://user:password@postgres-service:5432/social_media"
  SENTRY_DSN: ""
  # API Keys (optional)
  X_API_KEY: ""
  INSTAGRAM_API_KEY: ""
  FACEBOOK_API_KEY: ""
  YOUTUBE_API_KEY: ""
  LINKEDIN_API_KEY: ""
  # Email (optional)
  SMTP_USER: ""
  SMTP_PASSWORD: ""
---
# Instructions:
# 1. Copy this file to secrets.yaml (DO NOT commit secrets.yaml to git)
# 2. Replace placeholder values with actual secrets
# 3. Apply: kubectl apply -f k8s/secrets.yaml
# 
# For production, use a secrets management system:
# - HashiCorp Vault
# - AWS Secrets Manager
# - Google Secret Manager
# - Azure Key Vault

